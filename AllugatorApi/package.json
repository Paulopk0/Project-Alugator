{
  "name": "allugatorapi",
  "version": "1.2.0",
  "description": "Backend API for Allugator app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node database/migrations/createTables.js",
    "seed:users": "node database/seeders/userSeeder.js",
    "seed:items": "node database/seeders/itemSeeder.js",
    "seed:all": "npm run migrate && npm run seed:users && npm run seed:items",
    "db:reset": "rm -f database/data/database.sqlite && npm run seed:all"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  },
  "type": "commonjs",
  "private": true
}
